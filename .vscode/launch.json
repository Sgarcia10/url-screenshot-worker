{
  "version": "0.2.0",
  "configurations": [
      {
        "name": "Debug Jest tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/.bin/jest",
        "args": [
          "--runInBand",
          "--no-cache"
        ],
        "runtimeArgs": [
          "--inspect-brk"
        ],
        "cwd": "${workspaceRoot}",
        "protocol": "inspector",
        "console": "integratedTerminal",
        "sourceMaps": false
      }
  ]
}