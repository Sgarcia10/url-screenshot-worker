{
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "preset": "ts-jest",
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/$1"
    },
    "globals": {
        "ts-jest": {
            "tsConfig": "./tsconfig.test.json"
        }
    },
    "setupFiles": ["dotenv/config"]
  }